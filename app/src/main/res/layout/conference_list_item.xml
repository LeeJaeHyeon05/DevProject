<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conferPreCardView"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/conferPreImageView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/default_image"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/conferPreImageView"
            app:layout_constraintTop_toTopOf="@+id/conferPreImageView"
            app:srcCompat="@drawable/ic_baseline_free_cancellation_24"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/conferPreTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:text="네이버 컨퍼런스"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/conferPreImageView"
            app:layout_constraintTop_toTopOf="@id/conferPreImageView" />

        <TextView
            android:id="@+id/conferPreContentTextView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="The Conference for Java,Architecture and Software Innovation"
            android:textColor="@color/darkGrayColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/conferPreTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/conferPreTitleTextView" />

        <TextView
            android:id="@+id/conferPreDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022. 05. 02"
            android:textColor="@color/brightGrayColor"
            app:layout_constraintStart_toStartOf="@+id/conferPreTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/conferPreContentTextView" />

        <com.google.android.material.chip.Chip
            android:id="@+id/languageChip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/buttonColor"
            android:text="코틀린"
            app:chipBackgroundColor="@color/buttonColor"
            app:layout_constraintStart_toStartOf="@+id/conferPreTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/conferPreDateTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

