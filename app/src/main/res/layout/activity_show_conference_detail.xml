<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/detailViewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="10dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/conferDetailImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/dev"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/circleIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/circleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:dotsColor="@color/white"
            app:selectedDotColor="@color/black"
            app:dotsSize="10sp"
            android:layout_gravity="center|bottom"
            android:visibility="invisible"
            />
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/circleIndicator2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:dotsColor="@color/black"
            app:selectedDotColor="@color/white"
            app:dotsSize="10sp"
            android:layout_gravity="center|bottom"
            android:visibility="invisible"
            />

    </FrameLayout>


    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/detailPageMapSnapShot"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:inner_view="@layout/expandable_second_map_snapshot"
        app:title="지도 보이기"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detailPageMapSnapShot"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TableRow
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/conferUploadeIconImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/conferUploaderTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/conferManagerImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_baseline_verified_24"
                app:tint="@android:color/holo_green_light" />
        </TableRow>

        <TableRow
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/conferStartDateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~" />

            <TextView
                android:id="@+id/conferFinishDateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/first">

            <TextView
                android:id="@+id/conferPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/conferOfflineTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <ImageView
                android:id="@+id/conferURLImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/link" />
        </TableRow>

        <TextView
            android:id="@+id/conferConetentTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@id/third"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>