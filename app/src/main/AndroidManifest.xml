<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.devproject">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DevProject">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:exported="false" >
        </activity>

        <activity
            android:name=".activity.account.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".activity.account.ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".activity.account.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".activity.ShowConferenceDetailActivity"
            android:exported="false" />

        <activity
            android:name=".addConferences.AddConferencesActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />

        <activity
            android:name=".activity.EditConferenceActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />

        <activity
            android:name=".activity.MapActivity"
            android:exported="false" />

        <activity
            android:name=".activity.ShowWebViewActivity"
            android:exported="false" />
    </application>

</manifest>