<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. --> <!-- 텍스트뷰와 버튼 Jua 폰트 적용 -->
        <item name="android:textViewStyle">@style/JuaTextView</item>
        <item name="android:buttonStyle">@style/JuaButton</item>
    </style>

    <style name = "JuaTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jua_regular</item>
    </style>

    <style name = "JuaButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/jua_regular</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>