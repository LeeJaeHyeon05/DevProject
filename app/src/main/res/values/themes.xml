<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevProject" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarTheme">@style/MyActionBar</item>

        <item name="android:textColorPrimary">@color/yellow_700</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <!-- 텍스트뷰와 버튼 Jua 폰트 적용 -->
        <item name="android:textViewStyle">@style/JuaTextView</item>
        <item name="android:buttonStyle">@style/JuaButton</item>

    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name = "JuaTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name = "JuaButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

        <!-- 텍스트입력 레이아웃 세부 설정 -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--FilledBox일 경우 밑줄 색상, OutlinedBox일 경우 테두리 색상-->
        <item name="boxStrokeColor">@null</item>
        <!--Counter-->
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
        <!--EditText에 있을때의 Hint-->
        <item name="android:textColorHint">@color/textInputHintColor</item>
        <!--상단에 있을때의 Hint-->
        <item name="hintTextColor">@color/textInputHintColor</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CounterTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.DevProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DevProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DevProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>