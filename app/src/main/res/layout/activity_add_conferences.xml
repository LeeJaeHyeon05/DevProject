<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addConferences.AddConferencesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/backPressedBtn"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addConTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="컨퍼런스 추가하기"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/backPressedBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backPressedBtn" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addConTitleTextView">

            <EditText
                android:id="@+id/addConTitle"
                style="@style/TextInputEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:hint="제목  추가하기" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/detailTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextInput">

            <EditText
                android:id="@+id/addConDetail"
                style="@style/TextInputEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:hint="내용 추가하기" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/detailTextInput"
            app:layout_constraintStart_toStartOf="@+id/detailTextInput"
            app:layout_constraintTop_toBottomOf="@+id/detailTextInput" />

        <Button
            android:id="@+id/datePickButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/con_round"
            android:fontFamily="@font/jua_regular"
            android:text="@string/dateText"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/dateTextView"
            app:layout_constraintStart_toStartOf="@+id/dateTextView"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text=""
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/datePickButton"
            app:layout_constraintStart_toStartOf="@+id/datePickButton"
            app:layout_constraintTop_toBottomOf="@+id/datePickButton" />

        <Button
            android:id="@+id/priceButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/con_round"
            android:fontFamily="@font/jua_regular"
            android:text="@string/priceText"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/priceTextView"
            app:layout_constraintStart_toStartOf="@+id/priceTextView"
            app:layout_constraintTop_toBottomOf="@+id/priceTextView" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/TextLayoutConferenceGeo"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceButton">

            <EditText
                style="@style/TextInputEditTextStyle"
                android:id="@+id/ETConferenceGeo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/black"
                android:hint="위치"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.alespero.expandablecardview.ExpandableCardView
            android:id="@+id/showMapSnapShotLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            app:title="지도 보이기"
            app:animationDuration="300"
            app:expandOnClick="true"
            app:inner_view="@layout/expandable_second_map_snapshot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TextLayoutConferenceGeo">
        </com.alespero.expandablecardview.ExpandableCardView>


        <Button
            android:id="@+id/addConButton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/con_round"
            android:fontFamily="@font/jua_regular"
            android:text="@string/addConferenceText"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/showMapSnapShotLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>