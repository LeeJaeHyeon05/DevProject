<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddConferencesActivity">


    <Button
        android:id="@+id/backPressedBtn"
        android:layout_width="50dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"/>

    <TextView
        android:id="@+id/addConTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backPressedBtn"
        app:layout_constraintBottom_toBottomOf="@+id/backPressedBtn"
        android:text="컨퍼런스 추가하기"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="@color/black"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/titleTextInput"
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/addConTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">

        <EditText
            style="@style/TextInputEditTextStyle"
            android:id="@+id/addConTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="제목  추가하기" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/detailTextInput"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            style="@style/TextInputEditTextStyle"
            android:id="@+id/addConDetail"
            android:layout_gravity="top|left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="내용 추가하기" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/datePickButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/detailTextInput"
        app:layout_constraintEnd_toStartOf="@+id/priceButton"
        app:layout_constraintStart_toStartOf="@+id/detailTextInput"
        android:background="@drawable/con_round"
        android:layout_marginTop="10dp"
        android:text="@string/dateText"
        android:fontFamily="@font/jua_regular"
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/priceButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/datePickButton"
        app:layout_constraintBottom_toBottomOf="@+id/datePickButton"
        app:layout_constraintStart_toEndOf="@+id/datePickButton"
        app:layout_constraintEnd_toStartOf="@+id/locationButton"
        android:background="@drawable/con_round"
        android:layout_marginStart="10dp"
        android:text="@string/priceText"
        android:fontFamily="@font/jua_regular"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/priceButton"
        app:layout_constraintBottom_toBottomOf="@+id/priceButton"
        app:layout_constraintStart_toEndOf="@+id/priceButton"
        app:layout_constraintEnd_toEndOf="@+id/detailTextInput"
        android:background="@drawable/con_round"
        android:layout_marginStart="10dp"
        android:text="@string/locationText"
        android:fontFamily="@font/jua_regular"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/addConButton"
        android:layout_width="290dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/con_round"
        android:layout_marginBottom="50dp"
        android:text="@string/addConferenceText"
        android:fontFamily="@font/jua_regular"
        android:textColor="@color/black"
        android:textSize="25sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>